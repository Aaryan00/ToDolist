                                                <div id="calender"><%= post.date %></div> 
                                                <%if (post.category == "school") {%> 
                                                      <div class="school yellow"><%= post.category %></div>
                                                <%}%>
                                                <%if (post.category == "home") {%> 
                                                      <div class="school orange"><%= post.category %></div>
                                                <%}%>
                                                <%if (post.category == "work") {%> 
                                                      <div class="school blue"><%= post.category %></div>
                                                <%}%>
                                                <%if (post.category == "Office") {%> 
                                                      <div class="school green"><%= post.category %></div>
                                                <%}%>
                                          </div>
                                    </li>
                              <%}%>
                        <% } %>
                  </ul>
            </form>		
      </main>


      <footer class="footer">
            Thank You for Using Todo List .
            <br><br>
