<div class="container">
      <header class="header">
            Hello <%= user.name %>.<br> Welcome to your personal TODO List......
            <br>
            It's nice to see You here again!!
      </header>


      <main class="main">
            <h3 id="heading">Add Your Tasks</h3>
            <form action="/users/posts/create" id="new-post-form" method="POST">
                  <div class="description">
                        <div id="labels">Description</div>
                              <textarea class="fields" name="content" placeholder="What do you need to do?" required></textarea>
                        </div>
                        <div class="category-date">
                              <div class="category">
                                    <div id="labels">Category</div>
                        <select class="categry" name="category">
                              <option value="school">School</option>
                              <option value="work">Work</option>
                              <option value="home">Home</option>
                              <option value="Office">Office</option>
                        </select>
                  </div>
                        
                  <div class="date">
                        <div id="labels">Due Date</div>
                              <input class="categry" onload="getDate()" type="date" name="date" required> 
                        </div>
                  </div>

                  <input id= "task-btn" type="submit" value=" + Add Task">    
                  <ul>
