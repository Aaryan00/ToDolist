<div class="container">
    <div class="forms-container">
      <div class="signin-signup">
        <form action="/users/create-session" method="POST" class="sign-in-form">
          <h2 class="title">Sign in</h2>
          <div class="input-field">
            <i class="fas fa-user"></i>
            <input type="email"name="email" placeholder="Email" required/>
          </div>
          <div class="input-field">
            <i class="fas fa-lock"></i>
            <input type="password" name="password" placeholder="Password" required/>
          </div>
          <a href="/reset_password/get_email">
            <p class="forgot">Forgot password</p> 
        </a>
          <input type="submit" value="Sign in" class="btn solid" />
        </form>
        <!-- <a href="/reset_password/get_email">
          <button class="forgot">Forgot password</button> 
      </a> -->

        <form action="/users/create"  method="POST" class="sign-up-form">
          <h2 class="title">Sign up</h2>
          <div class="input-field">
            <i class="fas fa-user"></i>
            <input type="text"  name ="name" placeholder="Full name" required/>
          </div>
          <div class="input-field">
            <i class="fas fa-envelope"></i>
            <input type="email" name="email" placeholder="Email" required/>
          </div>
          <div class="input-field">
            <i class="fas fa-lock"></i>
            <input type="password" name="password" placeholder="Password" required/>
          </div>
          <div class="input-field">
            <i class="fas fa-lock"></i>
            <input type="password" name="confirm" placeholder="Confirm Password" required/>
          </div>
          <input type="submit" class="btn" value="submit" />
        </form>
      </div>
    </div>

    <div class="panels-container">
      <div class="panel left-panel">
        <div class="content">
            <h1>Todo List</h1>
          <h3>New here ?</h3>
          <p>
            Had You not registered to your personal ToDo list till now.......<br> What are You waiting for register fast!!!1
          </p>
          <button class="btn transparent" id="sign-up-btn">
            Sign up
          </button>
        </div>
        <img src="image/log.svg" class="image" alt="" />
      </div>
      <div class="panel right-panel">
        <div class="content">
            <h1>TodoList</h1>
          <h3>One of us ?</h3>
          <p>
            Thank You for registering. Go fast and sign in and start using your personal Todo list!!!!
          </p>
          <button class="btn transparent" id="sign-in-btn">
            Sign in
          </button>
        </div>
        <img src='image/register.svg' class="image" alt="" />
      </div>
    </div>
  </div>

